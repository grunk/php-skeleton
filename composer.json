{
    "name": "grunk/php-skeleton",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^2.1"
    },

    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "style": "phpcs -p --standard=PSR12 --exclude=Generic.Files.LineLength src tests",
        "style-fix": "phpcbf -p --standard=PSR12 src tests",
        "phpunit": "phpunit --configuration phpunit.xml",
        "phpstan": "phpstan analyse -c phpstan.neon",
        "test": [
            "phpcs -p --standard=PSR12 --exclude=Generic.Files.LineLength --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
            "phpstan analyse -c phpstan.neon",
            "phpunit --configuration phpunit.xml"
        ]
    }
}
